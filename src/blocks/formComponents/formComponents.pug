mixin input(name)
  .input-wrapper(data-input-parent='')
    .input-wrapper__placeholder
      |#{attributes.placeholder}
    +search-svg.input-wrapper-search
    input.input(data-input='' required autocomplete="off" name=name?name:'')&attributes(attributes)
    +reset.input-wrapper-svg

mixin select
  .select-wrapper(class=attributes.wrapperClass)
    .select(class=attributes.class )
      select.select__select(data-select-placeholder=attributes.placeholder style='width: 100%' data-checkout-select='' required data-parsley-select)
        if (attributes.placeholder)
          option(value='' disabled selected)
        each item in attributes.options
          option(value=item)
            |#{item}


mixin checkbox(text)
  .checkbox
    label.container
      input(type='checkbox')&attributes(attributes)
      span.checkmark
        +tick
      p=text